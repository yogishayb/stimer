<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:background="#333300"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View android:background="@color/white"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:id="@+id/myid"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp" android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myid"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/atomic_age"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button android:background="@drawable/btnbg"
        android:layout_height="40dp"
        android:layout_width="90dp"
        android:id="@+id/b1"
        android:fontFamily="@font/acme"
        android:layout_marginTop="40dp"
        android:text="@string/start"
        android:layout_below="@id/timer"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnbg"
        android:fontFamily="@font/acme"
        android:onClick="click"
        android:text="@string/reset"
        android:textAllCaps="false" />


    -<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_above="@+id/lv">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/acme"
        android:text="@string/by_yoggie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/lapbtn"/>

    <Button
        android:background="@drawable/btnbg"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:id="@+id/lapbtn"
        android:fontFamily="@font/acme"
        android:text="@string/lap"

        android:onClick="click"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

    <ListView android:background="@drawable/lvbg"
        android:layout_height="200dp" android:layout_width="match_parent"
        android:id="@+id/lv" android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" android:layout_marginTop="0dp"
        android:padding="5dp" android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

</RelativeLayout>